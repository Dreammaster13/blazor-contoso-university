@page "/courses/delete/{CourseID}"
@inherits DeleteModel

<h2>Delete</h2>

@if (IsBusy)
{
    <p>Loading...</p>
}
else
{
    <h3>Are you sure you want to delete this?</h3>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Course.Id</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Course.Title</dd>
        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Course.Credits</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Course.DepartmentName</dd>
    </dl>
    <div>
        <a href="/courses" class="btn btn-default">Cancel</a>
        <button class="btn btn-primary" onclick="@OnDeleteClick">Delete</button>
    </div>
}