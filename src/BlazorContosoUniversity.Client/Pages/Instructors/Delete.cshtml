@page "/instructors/delete/{InstructorID}"
@inherits DeleteModel
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Instructor</h4>
    <hr />
    @if (IsBusy)
    {
        <p>Loading...</p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Instructor.LastName</dd>
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@Instructor.FirstMidName</dd>
            <dt class="col-sm-2">Hiredate</dt>
            <dd class="col-sm-10">@Instructor.HireDate.ToString("dd MMM yyyy")</dd>
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@Instructor.Location</dd>
        </dl>
        <div>
            <a class="btn btn-default" href="/instructors">Cancel</a>
            <button class="btn btn-primary" onclick="@OnDeleteClick">Delete</button>
        </div>
    }
</div>