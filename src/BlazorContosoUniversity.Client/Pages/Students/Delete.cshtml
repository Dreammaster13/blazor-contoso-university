@page "/students/delete/{StudentId}"
@inherits DeleteModel

<h2>Delete</h2>

@if (Student == null)
{
    <p>Loading...</p>
}
else
{
    <h3>Are you sure you want to delete this?</h3>
    <h4>Student</h4>
    <hr />
    <StudentDetails LastName="@Student.LastName"
                    FirstMidName="@Student.FirstMidName"
                    EnrollmentDate="@Student.EnrollmentDate"></StudentDetails>
    <a href="/students" class="btn btn-default">Cancel</a>
    <button class="btn btn-primary" onclick="@OnDeleteClick">Delete</button>
}